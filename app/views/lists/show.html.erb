<h1><%= @list.name %></h1>

<%= form_tag edit_multiple_list_items_path(@list), method: :get do %>
<table>
	<tr>
		<th>&nbsp;</th>
		<th>Name</th>
		<th>Purchased?</th>
		<th>Price</th>
	</tr>
	<% @items.each do |item| %>
	<tr>
		<td><%= check_box_tag "item_ids[]", item.id %></td>
		<td><%= item.name %></td>
		<td><%= item.purchased ? "Yes" : "No" %></td>
		<td><%= number_to_currency item.price %></td>
		<td><%= link_to 'Delete', [@list, item], method: :delete, data: { confirm: "Are you sure?" }  %></td>
	</tr>
	<% end %>
</table>
<%= submit_tag "Edit Checked" %>
<% end %>


<%= link_to 'New Item', new_list_item_path(@list) %>
<%= link_to 'Back to Lists', lists_path %>
<%= link_to 'Item Details', list_items_path(@list) %>